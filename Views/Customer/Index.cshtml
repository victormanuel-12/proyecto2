@model contagto.Models.Customer

@{
    ViewBag.Title = "Customer";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Registrar" method="post">
    <div class="form-group mt-3">
        <label asp-for="UserName" class="control-label">Usuario:</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="DNI" class="control-label">DNI:</label>
        <input asp-for="DNI" class="form-control" />
        <span asp-validation-for="DNI" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="BirthDate" class="control-label">Fecha de nacimiento:</label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Address" class="control-label">Direcci√≥n:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
</form>

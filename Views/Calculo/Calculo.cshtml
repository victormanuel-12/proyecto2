@{
    ViewBag.Title = "Calculadora";
}

<h1>Calculadora</h1>

<form method="post" asp-action="Calculo">
    <div class="form-group">
        <label for="numero1">Número 1</label>
        <input type="number" class="form-control" id="numero1" name="Numero1" />
    </div>

    <div class="form-group mt-2">
        <label for="numero2">Número 2</label>
        <input type="number" class="form-control" id="numero2" name="Numero2" />
    </div>

    <div class="form-group mt-2">
        <label for="operacion">Operación</label>
        <select class="form-control" id="operacion" name="Operacion">
            <option value="sumar">Sumar</option>
            <option value="restar">Restar</option>
            <option value="multiplicar">Multiplicar</option>
            <option value="dividir">Dividir</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Calcular</button>
</form>

<h1>@ViewData["Resultado"]</h1>


@if (ViewData["Resultado"] != null)
{
    <div class="alert alert-success mt-3">
        <strong>Resultado:</strong> @ViewData["Resultado"]
    </div>
}
</div>